<div class="col-xs-12 col-sm-6 col-md-3">
  <div class="display-product">
    <% cache product do %>
      <%= if(product.image_url != nil && product.image_url != "" )
            link_to(image_tag(product.image_url, class: "img-responsive product-image"), product)
          else
            "No image."
          end %>

      <div class="product-description">
        <p class ="product-name"><%= product.name %></p>
         <p>Description: <%= product.description %></p>
         <p>Price: <%= product.price %></p>

      <div class="product-links">
        <span><%= link_to 'Show', product, class:'btn btn-default'%></span>
        <% if signed_in? && current_user.admin? %>
          <span><%= link_to 'Edit', edit_product_path(product) %></span>
          <span><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
          <% end %>
        <% end %>
      </div><!-- /col -->
    </div>

        <% if signed_in? && current_user.admin? %>
           <h3><%= link_to 'Creat new product', new_product_path %></h3>
        <% end %>
</div>