<% cache product do %>
<div class="col-xs-12 col-sm-6 col-md-3">
  <div class="product-item"> 
    <h3 class="product-name"><%= link_to product.name, product %><h3>
    <%= link_to(image_tag(product.image_url, class: "img-circle img-responsive"), product) %>
    <h3 class="product-description"><%= truncate(product.description, length: 150) %></h3>
      <hr>
      
    <div class="product-price"><%= product.price %></div>
    <div class="col-xs-12 edit-product">
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
