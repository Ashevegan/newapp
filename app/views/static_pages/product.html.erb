<h1>StaticPages#products</h1>
<p>List of current products</p>

<% cache product do %>


<div class="row">
<!--  <div class="col-sm-2 col-md-4">-->

  <% @products.each do |product| %>
    
    <div class="item<%= " active" if product == @products.first %>">
    <div class="carousel-caption">
      <h1><%= link_to product.name, product %></h1> </div>
      <img alt="Fixie Bike" src="https://cdn.shopify.com/s/files/1/1109/6048/products/28100_7e7990f2-fa4c-4f5c-85fb-49e8cf1ef2ee_1024x1024.jpg?v=1481765378" />
      <p><%= product.description %></p>
      <strong>$ <%= product.price %></strong>
    <!-- </div>/col -->
    </div>
  <% end %>
  <% end %>
</div>

